{
    "hosting": [
        {
            "target": "prod",
            "public": "dist",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "/",
                    "destination": "/index.html"
                },
                {
                    "source": "/post/*",
                    "destination": "/post.html"
                }
            ],
            "headers": [
                {
                    "source": "**/*.@(css|jpg|jpeg|webp|png|gif|js|ico|svg)",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "max-age=31536000"
                        }
                    ]
                }
            ]
        },
        {
            "target": "staging",
            "public": "dist",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "/",
                    "destination": "/index.html"
                },
                {
                    "source": "/post/*",
                    "destination": "/post.html"
                }
            ],
            "headers": [
                {
                    "source": "**/*.@(css|jpg|jpeg|webp|png|gif|js|ico|svg)",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "max-age=31536000"
                        }
                    ]
                }
            ]
        }
    ]
}